<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>


        <main>



            <div class="container">
                <div class="row">
                    <div class="col-4 mx-auto border border-dark p-3 rounded">
                        <form action="/admin/add-product" method="post">

                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="title" aria-describedby="emailHelp"
                                    name="title">
                            </div>

                            <div class="mb-3">
                                <label for="imageUrl" class="form-label">Image URL</label>
                                <input type="text" class="form-control" id="imageUrl" aria-describedby="emailHelp"
                                    name="imageUrl">
                            </div>

                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" class="form-control" id="price" aria-describedby="emailHelp"
                                    name="price" step="0.01">
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" rows="3" name="description"></textarea>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-sm btn-primary">Add Product</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>






        </main>

        <%- include('../includes/end.ejs') %>
    </body>

</html>